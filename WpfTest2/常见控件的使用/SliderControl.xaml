<Page x:Class="WpfTest2.常见控件的使用.SliderControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTest2.常见控件的使用"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SliderControl">

    <Grid Background="White" Width="400" Height="400">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Slider Name="SliderTest" Minimum="10" Maximum="200" PreviewMouseUp="TestDragLeave"></Slider>
        <TextBox Grid.Row="1" Name="TextBoxTest"></TextBox>
    </Grid>
</Page>
