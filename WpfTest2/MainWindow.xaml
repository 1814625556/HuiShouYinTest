<Window x:Class="WpfTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mainpage="clr-namespace:WpfTest2.MainPages"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest2"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Width="320" Height="720">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl Name="Page" Panel.ZIndex="10" Width="320" Height="300">
            <Border Background="AliceBlue">
                <Frame NavigationUIVisibility="Hidden" x:Name="Frame">
                    <Frame.Content>
                        <mainpage:Mainpage/>
                    </Frame.Content>
                </Frame>
            </Border>
        </ContentControl>
        <ContentControl Grid.Row="0" Name="PopUp" Panel.ZIndex="20" Width="320" Height="320">
            <Ellipse Height="40" Width="200" Fill="Yellow"></Ellipse>
        </ContentControl>
    </Grid>
    <!--明天继续  导航页面的开发-->
</Window>
